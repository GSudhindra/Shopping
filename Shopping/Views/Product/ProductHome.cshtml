@{
    ViewData["Title"] = "ProductHome";
}
<html>
<head>
    <script src="https://kit.fontawesome.com/7d64766b1e.js" crossorigin="anonymous"></script>

</head>
<body>
<h1>Welcome to Ivan Yaaro Shop</h1> 
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="~/img/shopping.jpg" alt="First slide" width="200" height="500">
      <div class="carousel-caption">
        <h3 style="background-color:papayawhip">Shop With Us </h3>
        <h3 style="color:lawngreen"><marquee><i class="fa-solid fa-wallet"></i>Wonder About Our Collections</marquee></h3>
      </div>
      </div>

    <div class="carousel-item">
      <img class="d-block w-100" src="~/img/Good_Food_Display_-_NCI_Visuals_Online.jpg" alt="Second slide" width="200" height="500" >
      <div class="carousel-caption">
        <h3 style="background-color:antiquewhite">Various Brands</h3>
        <h3 style="color:lightgreen"><marquee><i class="fa-solid fa-road"></i>Buy what you want</marquee></h3>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="~/img/Ornaments.jpg" alt="Third slide" width="200" height="500">
      <div class="carousel-caption">
        <h3 style="background-color:navajowhite">Minimum Cost with Maximum Quality</h3>
        <h3 style="color:lightgreen"><marquee> <i class="fa-solid fa-location-smile"></i>Not Just Things, Buy some Happy </marquee></h3>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<br />
<br />



<div class="container">
    <div class="row align-items-start" >
    <div class="col">
        <div class="card mb-3" @*style="width: 18rem;*@>
  <h3 class="card-header">Ornaments</h3>
  <div class="card-body">
    <h5 class="card-title">Ornaments such as Gold, Silver</h5>
    <h6 class="card-subtitle text-muted">Buy Gold chains, coverings, and diamonds here</h6>
  </div>
    <img src="~/img/Jewelry-Logo-1.jpg" alt="Jeweleries" width="100%" height="100%"/>
  <div class="card-body">
    <p class="card-text">Thank You for Visting us... I am Ivan Yaaro who will be your Servant.</p>
  </div>
  <ul class="list-group list-group-flush">
     <li class="list-group-item">Buy with us and Be Unique and Proud</li>
    <li class="list-group-item">We are the best with Best Sellers in the World
    </li>
    <li class="list-group-item">We make you smile by our luminance</li>
  </ul>
  <div class="card-body">
   
    <a asp-controller="Product" asp-action="SortByCategory" asp-route-id="Ornaments" class="card-link">See this Category</a>
  </div>
  <div class="card-footer text-muted">
    @DateTimeKind.Local
  </div>
</div>
</div>
<div class="col">
    <div class="card mb-3" @*style="width: 18rem;"*@>
  <h3 class="card-header">Electronic Items</h3>
  <div class="card-body">
    <h5 class="card-title">Buy Branded Phones, Laptops and Speakers etc., </h5>
    <h6 class="card-subtitle text-muted">Support card subtitle</h6>
  </div>
  @*<svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">*@
    
        <img src="~/img/electronic goods.jpg" alt="speaker" width="100%" height="100%"/>
    
    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Buy Good Quality and Long Lasting Electronic Items</text>
  @*</svg>*@
  <div class="card-body">
    <p class="card-text">Hi Buddies, We Welcome You to Our Silicone World !.</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Buy with us</li>
    <li class="list-group-item">We are the best</li>
    <li class="list-group-item">We make you smile by our quality</li>
  </ul>
  <div class="card-body">
   
    <a asp-controller="Product" asp-action="SortByCategory" asp-route-id="Electronics" class="card-link">See this Category</a>
  </div>
  <div class="card-footer text-muted">
    @DateTime.Today
  </div>
</div>
</div>

<div class="col">
<div class="card mb-3" @*style="width: 18rem;"*@>
  <h3 class="card-header">Food Items</h3>
  <div class="card-body">
    <h5 class="card-title">Buy and eat Veg and Non Veg Items, Snacks etc., </h5>
    <h6 class="card-subtitle text-muted">Support card subtitle</h6>
  </div>
  <img src="~/img/Good_Food_Display_-_NCI_Visuals_Online.jpg" alt="Foods and Snacks" width="100%" height="100%"/>
  <div class="card-body">
    <p class="card-text">We Deliver what users want with fast delivery and Good Quality. </p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Eat Fresh and Well Cooked Food</li>
    <li class="list-group-item">We Maintain Punctuality</li>
    <li class="list-group-item">We make you smile by our taste</li>
  </ul>
  <div class="card-body">
    @*<a href="Login/login" class="card-link">Card link</a>*@
    <a asp-controller="Product" asp-action="SortByCategory" asp-route-id="Food" class="card-link">See this Category</a>
  </div>
  <div class="card-footer text-muted">
    @DateTime.Today
  </div>
</div>
</div>
</div>
 <div class="input-group-text">
 <select asp-action="SortByCategory" asp-route-id="@ViewBag.type" class ="form-control" asp-items="ViewBag.type" placeholder="Select Type"></select>
</div>

</div>
<a href="/Product/Index" >See List Of Products</a>
</body>
</html>
