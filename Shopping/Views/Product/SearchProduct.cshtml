

@{
    ViewData["Title"] = "SearchProduct";
    Layout = "MyLayout";
}

<h1>SearchProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResult" >
  
            <div class="form-group">
                
                <input name="SearchPhrase" class="form-control" placeholder="Search the product here"/>
                <label for="SearchPhrase" class="control-label"></label>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
           
        </form>
    </div>
</div>


