<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mystylesheet2.css" />
    <script src="https://kit.fontawesome.com/7d64766b1e.js" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Ivan Yaaro</a>
     <a class="navbar-brand text-success logo h1 align-self-center" href="~/css/horizontal_on_white_by_logaster.png">
                <img src="~/css/horizontal_on_white_by_logaster.png" height="50" width="100"/>
            </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active"  asp-controller="Home" asp-action="Index">Home
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Sellers" asp-action="Index">Sellers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"  asp-controller="Product" asp-action="createProduct">Add Product</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"  asp-controller="Product" asp-action="AddProductLocation">Map_Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"  asp-controller="Product" asp-action="AllProductLocation">Products_Location</a>
        </li> 
        <button class="btn btn-secondary my-2 my-sm-0" type="submit" asp-controller="Product" asp-action="SearchProduct">Search</button>
      </ul>
    </div>
     <partial name="_LoginPartial" />
  </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" >
        <div class="container" style="background-color:lightgreen;">
            &copy; 2022 - Shopping - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
           
                    <a class="text-light" href="https://fb.com/" target="_blank" rel="sponsored"><i class="fa-brands fa-facebook"></i></a>                    <a class="text-light" href="https://www.instagram.com/" target="_blank"><i class="bi bi-instagram bi-sm "></i></a>
                    <a class="text-light" href="https://twitter.com/" target="_blank"><i class="fa-brands fa-twitter-square"></i></a>
                    <a class="text-light" href="https://www.linkedin.com/" target="_blank"><i class="fa-brands fa-linkedin"></i></a> 
                    <a class="text-light" href="https://www.instagram.com/" target="_blank"><i class="fa-brands fa-instagram-square"></i></a>  
                    
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
