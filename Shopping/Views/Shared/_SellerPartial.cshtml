

@model Seller
@{
    var showButtons = (bool)ViewData["ShowButtons"];
}

<div class="card m-3" style="min-width:18rem; max-width:30.5%;">
          
            <div class="card-header">
                <h3 style="color:red; animation-name:revert">@Model.Seller_name</h3>
            </div>
            
            <div>
               <bold>I am <p style="color:orangered;">@Model.age</p></bold>
            </div>
            <div>
                @{
           
                  <img class="card-img-top imageThumbnail" src="~/img/seller_icon.png" alt="Seller"/>
                 }

                
            </div>
            <div>
                <a class="navbar-md-brand text-dark text-decoration-underline" href="tel:@Model.phoneNumber">Call Me</a>
            </div>
             
    @if (showButtons)
    {
        <div class="card-footer text-brown-center ">
            <a class="btn btn-primary" asp-action="SellerOtherProducts" asp-controller="Product" asp-route-id="@Model.Seller_id">Products</a> 
            <a class="btn btn-primary" asp-action="Edit" asp-controller="Sellers" asp-route-id="@Model.Seller_id">Edit</a> 
            <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Seller_id">Details</a> 
            <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@Model.Seller_id">Delete</a>
        </div>
    }
</div>
