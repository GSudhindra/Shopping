@model Shopping.Models.Seller

@{
    ViewData["Title"] = "login";
}
<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Login to See and get lot of Oppurtunities to sell Your Product</h2>

              <form asp-action="login">

                <div class="form-outline mb-4">
                    <input asp-for="Seller_id"  type="text" id="form3Example1cg" class="form-control form-control-lg" />
                
                  <label class="form-label" for="form3Example1cg">Seller ID</label>
                </div>

              

                <div class="form-outline mb-4">
                 
                  <input asp-for="Password" type="password" id="form3Example4cg" class="form-control form-control-lg"/>
                 
                    <span asp-validation-for="Password" class="text-danger"></span>
                  <label class="form-label" for="form3Example4cg">Password</label>
                </div>

            
            

                <div class="d-flex justify-content-center">
                  <button type="submit" value="Customerlogin"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Login</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Don't you have an account? <a href="/Login/CustomerRegister"
                    class="fw-bold text-body"><u>Register here</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
