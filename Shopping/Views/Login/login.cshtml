@model Shopping.Models.Seller

@{
    ViewData["Title"] = "login";
}

<h1>login</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">


        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Seller_id" class="form-control" id="floatingInput" placeholder="User ID" />
                <span asp-validation-for="Seller_id" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
               
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
